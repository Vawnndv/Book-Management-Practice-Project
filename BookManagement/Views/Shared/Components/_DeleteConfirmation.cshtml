@model Models.Models.DeleteViewModel

<div class="modal" tabindex="-1" role="dialog" id="deleteConfirmationModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close cancelDelete" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body title-confirm-delete">
                <p>Are you sure you want to delete this @Model.ItemType?</p>
            </div>
            <div class="modal-footer">
                @Html.Partial("Components/_DeleteForm", Model)
            </div>
        </div>
    </div>
</div>